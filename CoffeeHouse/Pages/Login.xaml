<Page x:Class="CoffeeHouse.Pages.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CoffeeHouse.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Login">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Center"
                VerticalAlignment="Center">
        <Label Content="Введите логин: "/>
        <TextBox x:Name="LoginTextBox" Height="35" Width="200"/>
        <Label Content="Введите пароль: "/>
        <PasswordBox x:Name="PasswordTextBox" Height="35" Width="200"/>
        <Button Content="Войти в аккаунт" Margin="0, 20" Height="35"
                Click="LoginButton_Click"/>
    </StackPanel>
</Page>
